@model PrescriptionApp.Models.PrescriptionModel

@{
    ViewData["Title"] = "Delete Prescription";
}

<h2>Delete Prescription</h2>

<h3>Are you sure you want to delete this prescription?</h3>

<div>
    <h4>@Model.MedicationName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fill Status</dt>
        <dd class="col-sm-10">@Model.FillStatus</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost</dd>

        <dt class="col-sm-2">Request Time</dt>
        <dd class="col-sm-10">@Model.RequestTime</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PrescriptionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
