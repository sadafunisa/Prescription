@model PrescriptionApp.Models.PrescriptionModel

@{
    ViewData["Title"] = Model.PrescriptionId == 0 ? "Add Prescription" : "Edit Prescription";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <input type="hidden" asp-for="PrescriptionId" />

    <div class="form-group">
        <label asp-for="MedicationName" class="control-label"></label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FillStatus" class="control-label"></label>
        <select asp-for="FillStatus" class="form-control">
            <option value="New">New</option>
            <option value="Filled">Filled</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RequestTime" class="control-label"></label>
        <input asp-for="RequestTime" class="form-control" readonly />
        <span asp-validation-for="RequestTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
